<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:inputType="textPassword"
            android:paddingVertical="@dimen/padding_normal"
            android:paddingStart="@dimen/padding_none"
            android:paddingEnd="@dimen/padding_extra_large"
            android:textAppearance="@style/TextTheme.Arial.TS16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_password_toggle"
            style="?android:buttonBarButtonStyle"
            android:layout_width="25dp"
            android:layout_height="23dp"
            android:paddingVertical="@dimen/margin_normal"
            android:paddingHorizontal="@dimen/margin_normal"
            android:src="@drawable/ic_password_show"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/et_password"
            app:layout_constraintTop_toTopOf="@id/et_password" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>