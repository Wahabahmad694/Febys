<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/additional_product_title"
            style="@style/TextTheme.HelveticaNeue.TS16.Bold"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:gravity="center"
            tools:text="Customers Recommend" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_additional_products"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingTop="@dimen/_16dp"
            tools:itemCount="1"
            tools:listitem="@layout/item_additional_product" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_additional_product_shop_all"
            style="@style/ButtonTheme.OutLine.Full"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16dp"
            android:layout_marginTop="@dimen/_16dp"
            android:text="@string/label_shop_all"
            app:backgroundTint="@android:color/transparent" />

    </LinearLayout>
</layout>