<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="product"
            type="com.hexagram.febys.models.api.product.Product" />

        <variable
            name="thread"
            type="com.hexagram.febys.models.api.product.QAThread" />

        <variable
            name="variant"
            type="com.hexagram.febys.models.api.product.Variant" />

        <variable
            name="firstAttrName"
            type="String" />

        <variable
            name="secondAttrName"
            type="String" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.screens.product.detail.ProductDetailFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_product_brand_appbar"
                style="@style/TextTheme.HelveticaNeue.TS16.Bold"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="@color/grey"
                android:gravity="center"
                android:paddingHorizontal="@dimen/_32dp"
                android:text="@{product.vendor.shopName}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_16dp"
                android:src="@drawable/ic_back"
                app:layout_constraintBottom_toBottomOf="@id/tv_product_brand_appbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_product_brand_appbar" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16dp"
                android:src="@drawable/ic_cart"
                app:layout_constraintBottom_toBottomOf="@id/tv_product_brand_appbar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_product_brand_appbar" />

            <TextView
                android:id="@+id/tv_cart_count"
                style="@style/TextTheme.HelveticaNeue.TS16.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_4sdp"
                android:contentDescription="@string/app_name"
                app:layout_constraintBottom_toBottomOf="@id/iv_cart"
                app:layout_constraintEnd_toStartOf="@id/iv_cart"
                app:layout_constraintTop_toTopOf="@id/iv_cart"
                app:layout_constraintVertical_bias="0.8"
                tools:text="2" />

            <com.hexagram.febys.utils.ScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_0dp"
                android:clipToPadding="false"
                android:fillViewport="true"
                android:paddingBottom="@dimen/_65sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_product_brand_appbar">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/slider_product_images"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_320sdp"
                        android:background="@drawable/bg_grey_fill"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_product_fav"
                        android:layout_width="@dimen/_19sdp"
                        android:layout_height="@dimen/_19sdp"
                        android:layout_marginTop="@dimen/_16dp"
                        android:layout_marginEnd="@dimen/_16dp"
                        android:src="@drawable/ic_un_fav"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/slider_product_images" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_product_share"
                        android:layout_width="@dimen/_19sdp"
                        android:layout_height="@dimen/_19sdp"
                        android:layout_marginTop="@dimen/_24dp"
                        android:layout_marginEnd="@dimen/_16dp"
                        android:src="@drawable/ic_product_share"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/iv_product_fav" />

                    <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                        android:id="@+id/dots_indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_24dp"
                        app:dotsColor="@color/slider_dot_color"
                        app:dotsCornerRadius="8dp"
                        app:dotsSize="4dp"
                        app:dotsSpacing="4dp"
                        app:dotsWidthFactor="2.5"
                        app:layout_constraintBottom_toBottomOf="@id/slider_product_images"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:progressMode="true"
                        app:selectedDotColor="@color/slider_dot_selected_color" />

                    <TextView
                        android:id="@+id/tv_product_brand"
                        style="@style/TextTheme.HelveticaNeue.TS14.Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_16dp"
                        android:layout_marginTop="@dimen/_16dp"
                        android:text="@{product.vendor.shopName}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/slider_product_images" />

                    <TextView
                        android:id="@+id/tv_product_name"
                        style="@style/TextTheme.Arial.TS14"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_16dp"
                        android:layout_marginTop="@dimen/_8dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="@{product.name}"
                        android:textAlignment="center"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_product_brand"
                        app:layout_constraintWidth_max="200dp" />

                    <TextView
                        android:id="@+id/tv_product_off_price"
                        style="@style/TextTheme.Arial.TS10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{variant.originalPrice.getFormattedPrice()}"
                        app:layout_constraintBaseline_toBaselineOf="@id/tv_product_price"
                        app:layout_constraintEnd_toStartOf="@id/tv_product_off_price_separator"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="@id/tv_product_name"
                        binding:is_visible="@{variant.hasPromotion}"
                        binding:strike_through="@{true}"
                        tools:text="$14" />

                    <TextView
                        android:id="@+id/tv_product_off_price_separator"
                        style="@style/TextTheme.Arial.TS12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_2sdp"
                        android:text="@string/minus"
                        app:layout_constraintBaseline_toBaselineOf="@id/tv_product_price"
                        app:layout_constraintEnd_toStartOf="@id/tv_product_price"
                        app:layout_constraintStart_toEndOf="@id/tv_product_off_price"
                        binding:is_visible="@{variant.hasPromotion}" />

                    <TextView
                        android:id="@+id/tv_product_price"
                        style="@style/TextTheme.Arial.TS12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2dp"
                        android:text="@{variant.price.getFormattedPrice()}"
                        app:layout_constraintEnd_toEndOf="@id/tv_product_name"
                        app:layout_constraintStart_toEndOf="@id/tv_product_off_price_separator"
                        app:layout_constraintTop_toBottomOf="@id/tv_product_name"
                        tools:text="$14" />

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/iv_product_verified_logo"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_24dp"
                        android:layout_marginTop="@dimen/_8dp"
                        app:actualImageResource="@drawable/ic_product_verified_logo"
                        app:actualImageScaleType="fitCenter"
                        app:layout_constraintDimensionRatio="7:1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_product_price" />

                    <LinearLayout
                        android:id="@+id/container_product_variant_first_attr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_16dp"
                        android:layout_marginTop="@dimen/_24dp"
                        android:background="@drawable/bg_border_blackish"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/iv_product_verified_logo">

                        <TextView
                            android:id="@+id/tv_product_variant_first_attr"
                            style="@style/TextTheme.Arial.TS14"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="@dimen/_16dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            tools:text="@string/label_variant" />

                        <View
                            android:layout_width="@dimen/_1dp"
                            android:layout_height="match_parent"
                            android:background="@color/black" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:padding="@dimen/_16dp"
                            android:src="@drawable/ic_arrow_down" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/container_product_variant_second_attr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_16dp"
                        android:layout_marginTop="@dimen/_24dp"
                        android:background="@drawable/bg_border_blackish"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/container_product_variant_first_attr">

                        <TextView
                            android:id="@+id/tv_product_variant_second_attr"
                            style="@style/TextTheme.Arial.TS14"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="@dimen/_16dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            tools:text="@string/label_variant" />

                        <View
                            android:layout_width="@dimen/_1dp"
                            android:layout_height="match_parent"
                            android:background="@color/black" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:padding="@dimen/_16dp"
                            android:src="@drawable/ic_arrow_down" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_add_protection"
                        style="@style/TextTheme.HelveticaNeue.TS16.Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16dp"
                        android:layout_marginTop="@dimen/_32dp"
                        android:text="@string/label_add_protection"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/container_product_variant_second_attr" />

                    <RadioGroup
                        android:id="@+id/rg_add_protection"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_16dp"
                        android:layout_marginTop="@dimen/_32dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_add_protection">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_border_dark_grey"
                            android:orientation="horizontal"
                            android:paddingHorizontal="@dimen/_16dp">

                            <RadioButton
                                android:id="@+id/rb_add_four_year_protection"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/tv_add_four_year_protection"
                                style="@style/TextTheme.Arial.TS16"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4-Year Protection for $16.64" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_16dp"
                            android:background="@drawable/bg_border_dark_grey"
                            android:orientation="horizontal"
                            android:paddingHorizontal="@dimen/_16dp">

                            <RadioButton
                                android:id="@+id/rb_add_three_year_protection"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/tv_add_three_year_protection"
                                style="@style/TextTheme.Arial.TS16"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3-Year Protection for $15.64" />
                        </LinearLayout>
                    </RadioGroup>

                    <TextView
                        android:id="@+id/tv_add_delivery_address"
                        style="@style/TextTheme.HelveticaNeue.TS16.Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16dp"
                        android:layout_marginTop="@dimen/_32dp"
                        android:text="@string/label_add_delivery_address"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/rg_add_protection" />

                    <LinearLayout
                        android:id="@+id/ll_container_payment_offers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_16dp"
                        android:layout_marginTop="@dimen/_32dp"
                        android:background="@drawable/bg_grey_fill"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingHorizontal="@dimen/_16dp"
                        android:paddingVertical="@dimen/_24dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_add_delivery_address">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_mobile_payment" />

                            <TextView
                                android:id="@+id/tv_mobile_payment_offer"
                                style="@style/TextTheme.Arial.TS14"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_16dp"
                                android:layout_weight="1"
                                android:text="@string/label_mobile_payment_offer" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_16dp"
                            android:gravity="center_vertical">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_buy_the_exchange" />

                            <TextView
                                android:id="@+id/tv_buy_the_exchange_offer"
                                style="@style/TextTheme.Arial.TS14"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_16dp"
                                android:layout_weight="1"
                                android:text="@string/label_buy_the_exchange_offer" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_16dp"
                            android:gravity="center_vertical">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_credit_card" />

                            <TextView
                                android:id="@+id/tv_credit_card_payment_offer"
                                style="@style/TextTheme.Arial.TS14"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_16dp"
                                android:layout_weight="1"
                                android:text="@string/label_credit_card_payment_offer" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_container_add_delivery_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_16dp"
                        android:layout_marginTop="@dimen/_24dp"
                        android:background="@drawable/bg_border_dark_grey"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/_16dp"
                        app:layout_constraintTop_toBottomOf="@id/ll_container_payment_offers">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/iv_add_delivery_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_location" />

                        <TextView
                            android:id="@+id/tv_delivery_address"
                            style="@style/TextTheme.Arial.TS14"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:text="@string/label_enter_delivery_city" />

                        <TextView
                            android:id="@+id/tv_check_delivery_city"
                            style="@style/TextTheme.Arial.TS14.Bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_check" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_delivery_info"
                        style="@style/TextTheme.Arial.TS14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_16dp"
                        android:layout_marginTop="@dimen/_24dp"
                        android:text="@string/label_add_delivery_address_info"
                        app:layout_constraintTop_toBottomOf="@id/ll_container_add_delivery_address" />

                    <LinearLayout
                        android:id="@+id/container_product_detail_information"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_16dp"
                        android:layout_marginTop="@dimen/_32dp"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@id/tv_delivery_info">

                        <LinearLayout
                            android:id="@+id/container_product_descriptions"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1dp"
                            android:background="@color/grey_e1e5e8" />

                        <LinearLayout
                            android:id="@+id/product_reviews_toggle"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_48dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/label_reviews"
                                style="@style/TextTheme.HelveticaNeue.TS14.Bold"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/label_reviews" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/iv_reviews_arrow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_arrow_down" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/container_product_reviews"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_24dp"
                            android:orientation="vertical"
                            android:visibility="gone">


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1dp"
                            android:background="@color/grey_e1e5e8" />

                        <LinearLayout
                            android:id="@+id/product_q_nd_a_toggle"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_48dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/label_q_and_a"
                                style="@style/TextTheme.HelveticaNeue.TS14.Bold"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/label_q_and_a" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/iv_q_and_a_arrow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_arrow_down" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/container_product_q_nd_a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_24dp"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                style="@style/TextTheme.HelveticaNeue.TS14.Bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/label_customer_q_and_a" />

                            <LinearLayout
                                android:id="@+id/container_q_and_a_thread"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginTop="@dimen/_12sdp"
                                android:orientation="vertical" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/see_more_q_and_a"
                                style="@style/ButtonTheme.OutLine.Full"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_39sdp"
                                android:text="@string/label_see_more" />

                            <LinearLayout
                                android:id="@+id/container_ask_about_product"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_42sdp"
                                android:layout_marginVertical="@dimen/_17sdp"
                                android:background="@drawable/bg_border_dark_grey"
                                android:gravity="center_vertical"
                                android:maxWidth="@dimen/_298sdp">

                                <TextView
                                    android:id="@+id/label_ask_about_product"
                                    style="@style/TextTheme.HelveticaNeue.TS14"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="@dimen/_16sdp"
                                    android:layout_weight="1"
                                    android:paddingVertical="@dimen/_8dp"
                                    android:text="@string/label_ask_about_product" />

                                <TextView
                                    android:id="@+id/label_ask"
                                    style="@style/TextTheme.HelveticaNeue.TS14.Bold"
                                    android:layout_width="@dimen/_58sdp"
                                    android:layout_height="match_parent"
                                    android:background="@color/black"
                                    android:gravity="center"
                                    android:text="@string/label_ask"
                                    android:textColor="@color/white" />

                            </LinearLayout>

                        </LinearLayout>

                        <include
                            android:id="@+id/container_product_shipping_info"
                            layout="@layout/layout_product_shipping_information"
                            app:product="@{product}"
                            app:variant="@{variant}" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1dp"
                            android:background="@color/grey_e1e5e8" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/container_store_information"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@id/container_product_detail_information">

                        <TextView
                            android:id="@+id/label_store_information"
                            style="@style/TextTheme.HelveticaNeue.TS16.Bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/_32dp"
                            android:text="@string/label_store_information" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1dp"
                            android:background="@color/grey_e1e5e8" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_16dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <com.facebook.drawee.view.SimpleDraweeView
                                    android:id="@+id/iv_stores_image"
                                    android:layout_width="56dp"
                                    android:layout_height="56dp"
                                    app:actualImageScaleType="centerCrop"
                                    app:placeholderImage="@drawable/placeholder_user"
                                    app:roundAsCircle="true"
                                    binding:image_url="@{product.vendor.businessInfo.logo}" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_8dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tv_store_name"
                                        style="@style/TextTheme.Arial.TS14"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@{product.vendor.contactDetails.name}" />

                                    <TextView
                                        android:id="@+id/tv_store_type"
                                        style="@style/TextTheme.Arial.TS12"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@{product.vendor.businessInfo.vendorType}"
                                        android:textColor="@color/red" />
                                </LinearLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="@dimen/_1dp"
                                android:layout_height="match_parent"
                                android:background="@color/grey_e1e5e8" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/_16dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <androidx.appcompat.widget.AppCompatRatingBar
                                    android:id="@+id/store_rating_bar"
                                    style="?ratingBarStyleSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:numStars="5"
                                    android:progress="50" />

                                <TextView
                                    android:id="@+id/tv_store_rating"
                                    style="@style/TextTheme.Arial.TS14"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@{@string/store_rating(2.5)}" />

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1dp"
                            android:background="@color/grey_e1e5e8" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/container_additional_products"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@id/container_store_information" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.hexagram.febys.utils.ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_18sdp"
                android:layout_marginBottom="@dimen/_14sdp"
                app:layout_constraintBottom_toBottomOf="parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_pay_now"
                    style="@style/ButtonTheme.Contained"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxWidth="@dimen/_146sdp"
                    android:text="@string/label_pay_now" />

                <View
                    android:layout_width="@dimen/_4sdp"
                    android:layout_height="match_parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_add_to_cart"
                    style="@style/ButtonTheme.OutLine.Full"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxWidth="@dimen/_146sdp"
                    android:minHeight="@dimen/_64dp"
                    android:text="@string/label_add_to_cart" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/bg_dim"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?color_dim" />

        <include
            android:id="@+id/bottom_sheet_variant_first_attr"
            layout="@layout/bottom_sheet_product_variant"
            app:variantName="@{firstAttrName}" />

        <include
            android:id="@+id/bottom_sheet_variant_second_attr"
            layout="@layout/bottom_sheet_product_variant"
            app:variantName="@{secondAttrName}" />

        <include
            android:id="@+id/bottom_sheet_ask_question"
            layout="@layout/bottom_sheet_ask_question" />

        <include
            android:id="@+id/bottom_sheet_reply_question"
            layout="@layout/bottom_sheet_reply_question"
            app:thread="@{thread}" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>