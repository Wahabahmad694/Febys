<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Febys" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Customize your theme here. -->

        <item name="android:windowBackground">@color/bg_windows_light</item>

        <item name="android:listDivider">@color/list_divider</item>
    </style>

    <style name="TextTheme">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextTheme.HelveticaNeue">
        <item name="fontFamily">@font/helvetica_neue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextTheme.HelveticaNeue.TS12">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextTheme.HelveticaNeue.TS14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextTheme.HelveticaNeue.TS16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextTheme.HelveticaNeue.TS18">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextTheme.Arial">
        <item name="fontFamily">@font/arial</item>
    </style>

    <style name="TextTheme.Arial.TS10">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextTheme.Arial.TS12">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ButtonTheme">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ButtonTheme.OutLine" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextTheme.HelveticaNeue.TS18</item>
        <item name="strokeColor">@color/black</item>
    </style>

    <style name="ButtonTheme.OutLine.Small">
        <item name="android:textAppearance">@style/TextTheme.HelveticaNeue.TS12</item>
        <item name="strokeColor">@color/black</item>
    </style>

    <style name="ChipTheme.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipStrokeWidth">1dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="chipBackgroundColor">@color/selector_chip</item>
        <item name="chipStrokeColor">@color/bg_chip</item>
        <item name="shapeAppearanceOverlay">@null</item>
        <item name="android:textAppearance">@style/TextTheme.HelveticaNeue.TS12</item>
    </style>
</resources>