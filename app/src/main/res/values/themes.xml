<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Febys" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowBackground">@color/bg_windows_light</item>

        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
        <item name="android:listDivider">@color/grey_e1e5e8</item>

        <item name="color_dim">@color/black_transparent_80</item>
    </style>

    <style name="TextTheme">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextTheme.HelveticaNeue">
        <item name="fontFamily">@font/helvetica_neue</item>
    </style>

    <style name="TextTheme.HelveticaNeue.TS12">
        <item name="android:textSize">@dimen/_12sp</item>
    </style>

    <style name="TextTheme.HelveticaNeue.TS12.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextTheme.HelveticaNeue.TS14">
        <item name="android:textSize">@dimen/_14sp</item>
    </style>

    <style name="TextTheme.HelveticaNeue.TS14.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextTheme.HelveticaNeue.TS14.Grey">
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <style name="TextTheme.HelveticaNeue.TS16">
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="TextTheme.HelveticaNeue.TS16.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextTheme.HelveticaNeue.TS18">
        <item name="android:textSize">@dimen/_18sp</item>
    </style>

    <style name="TextTheme.HelveticaNeue.TS18.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextTheme.HelveticaNeue.TS20">
        <item name="android:textSize">@dimen/_20sp</item>
    </style>


    <style name="TextTheme.HelveticaNeue.TS32">
        <item name="android:textSize">@dimen/_32sp</item>
    </style>

    <style name="TextTheme.HelveticaNeue.TS20.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextTheme.HelveticaNeue.TS32.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextTheme.Arial">
        <item name="fontFamily">@font/arial</item>
    </style>

    <style name="TextTheme.Arial.TS10">
        <item name="android:textSize">@dimen/_10sp</item>
    </style>

    <style name="TextTheme.Arial.TS10.Grey">
        <item name="android:textColor">@color/text_grey</item>
    </style>
    <style name="TextTheme.Arial.TS10.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextTheme.Arial.TS12">
        <item name="android:textSize">@dimen/_12sp</item>
    </style>

    <style name="TextTheme.Arial.TS12.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextTheme.Arial.TS14">
        <item name="android:textSize">@dimen/_14sp</item>
    </style>

    <style name="TextTheme.Arial.TS14.Grey">
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <style name="TextTheme.Arial.TS14.Bold">
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextTheme.Arial.TS16">
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="TextTheme.Arial.TS16.bold">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="TextTheme.Arial.TS16.Grey">
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <style name="TextTheme.OpenSans">
        <item name="fontFamily">@font/open_sans</item>
    </style>

    <style name="TextTheme.OpenSans.TS14">
        <item name="android:textSize">@dimen/_14sp</item>
    </style>

    <style name="TextTheme.OpenSans.TS14.Bold">
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonTheme">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ButtonTheme.OutLine" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextTheme.HelveticaNeue.TS14</item>
        <item name="android:minWidth">@dimen/_96sdp</item>
        <item name="strokeColor">@color/disable_button_color</item>
        <item name="backgroundTint">@color/selector_outlined_button</item>
    </style>

    <style name="ButtonTheme.OutLine.Red">
        <item name="android:textAppearance">@style/TextTheme.HelveticaNeue.TS14</item>
        <item name="android:minWidth">@dimen/_96sdp</item>
        <item name="strokeColor">@color/red</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/red</item>
    </style>

    <style name="ButtonTheme.OutLines" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextTheme.HelveticaNeue.TS14</item>
        <item name="android:minWidth">@dimen/_96sdp</item>
        <item name="strokeColor">@color/black</item>
        <item name="backgroundTint">@color/selector_outlined_button</item>
    </style>

    <style name="ButtonTheme.OutLine.Full">
        <item name="android:textAppearance">@style/TextTheme.HelveticaNeue.TS18.Bold</item>
        <item name="strokeColor">@color/black</item>
    </style>

    <style name="ButtonTheme.OutLine.Small">
        <item name="android:textAppearance">@style/TextTheme.HelveticaNeue.TS12</item>
    </style>

    <style name="Button.ShapeAppearance" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_4dp</item>
    </style>

    <style name="ButtonTheme.Contained" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:minHeight">@dimen/_64dp</item>
        <item name="backgroundTint">@color/selector_contained_button</item>
        <item name="android:textAppearance">@style/TextTheme.HelveticaNeue.TS16</item>
        <item name="shapeAppearance">@style/Button.ShapeAppearance</item>
    </style>

    <style name="ButtonTheme.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/TextTheme.OpenSans.TS14.Bold</item>
    </style>

    <style name="ChipTheme.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipStrokeWidth">@dimen/_1dp</item>
        <item name="cornerRadius">@dimen/_8dp</item>
        <item name="chipBackgroundColor">@color/selector_chip</item>
        <item name="chipStrokeColor">@color/grey_e1e5e8</item>
        <item name="shapeAppearanceOverlay">@null</item>
        <item name="android:textAppearance">@style/TextTheme.HelveticaNeue.TS12</item>
    </style>

    <style name="TextInputLayout.ShapeAppearance" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">@dimen/_4dp</item>
    </style>

    <style name="TextInputLayout.FilledBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="hintTextColor">@color/black</item>
        <item name="hintTextAppearance">@style/TextTheme.HelveticaNeue.TS12</item>
        <item name="android:textAppearance">@style/TextTheme.Arial.TS16</item>
        <item name="android:textColor">@color/black</item>
        <item name="shapeAppearance">@style/TextInputLayout.ShapeAppearance</item>
    </style>

    <style name="RatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/bg_rating_bar</item>
        <item name="android:isIndicator">true</item>
        <item name="android:minHeight">@dimen/_13sdp</item>
        <item name="android:maxHeight">@dimen/_20sdp</item>
    </style>

    <style name="RatingBar.Editable">
        <item name="android:isIndicator">false</item>
        <item name="android:width">@dimen/_60sdp</item>
        <item name="android:height">@dimen/_20sdp</item>
    </style>

    <style name="ImageCropperTheme" parent="Base.Theme.AppCompat">
        <item name="colorPrimary">@color/bg_border_red</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:fontFamily">@font/helvetica_neue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>

</resources>